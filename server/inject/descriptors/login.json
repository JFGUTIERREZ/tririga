{
  "type": "object",
  "comment": "Login",
  "properties": {
    "loginframe": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "control": "text",
          "selector": "#userNameField"
        },
        "password": {
          "type": "string",
          "control": "text",
          "selector": "#passwordField"
        },
        "submit": {
          "type": "action",
          "control": "action.button",
          "selector": ".loginButton"
        },
        "errorMessage": {
          "type": "string",
          "selector": "#loginError",
          "control": "property.innerText"
        }
      },
      "frameSelector": "iframe[role=\"presentation\"]"
    },
    "islogin": {
      "type": "identifier",
      "control": "exist",
      "selector": "div",
      "selectContains": "IBM TRIRIGA"
    }
  },
  "connect": [
    {
      "match": [
        "islogin"
      ],
      "screens": [
        "login"
      ]
    }
  ],
  "frameSelector": "[src=\"index.jsp\"]"
}
